{
    "manifest_version": 3,
    "name": "Ai summarizer",
    "version": "1.0",
    "description": "Summarize any webpage with AI", 
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html"
        
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],

    "background": {
        "service_worker": "background.js"
    },

    "options_page": "options.html",

    "host_permissions": [
        "<all_urls>"
    ]

}